import pandas as pd
monFichier = '/Users/VPV/Desktop/test.csv' 
input = (monFichier)
df = pd.read_csv(input)


#extract number and address in column


df['street']=df['Address'].str.split(pat="\d")

df['number']=df['Address'].str.split(pat="\D")


# change to string for cleaning

df['street']=df['street'].astype(str)

df['number']=df['number'].astype(str)


# clean column


dic= ["-",",","\[","\]","\'","\"","     ","    ","   ","  "]

df['number']=df['number'].replace(dic,'',regex=True)
df['street']=df['street'].replace(dic,'',regex=True)


#change street to int for sorting 
df['number'] = pd.to_numeric(df['number'],errors='coerce')

# sort first by street then by number
df=df.sort_values(by=['street','number'])



# create file csv with sort address


df.to_csv("/Users/VPV/Desktop/Out.csv",header=True,index=False,encoding="utf8")





// problème avec les B bis T ter et es 12-18 avenue




3 patterns


1/ (most commom) pattern number + string = "10 rue du général"

	variant:  number + string + string = "10 bis rue du général" or "144 B rue de Paris"
	"bis", "ter" or a letter add information to a specific street. Mostly used in large street.

	

2/ pattern number number + string = "22-25 rue de la mairie"

3/ pattern string only = "ZAC zone commercial industrielle"

4/ 10 rue du général 1er






