import pandas as pd

file_to_clean = '/Users/VPV/Desktop/pandas/home.csv' 
df = pd.read_csv(file_to_clean)


# sollution 1 : garde 1 personne par foyer nom+adresse+cp+ville

df_houseold=df.drop_duplicates(subset=['nom','adresse','cp','ville'],keep='first')

df_houseold.to_csv('/Users/VPV/Desktop/houseold.csv', encoding='utf8', index=False)


